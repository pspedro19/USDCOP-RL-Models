# Application
APP_NAME=SignalBridge
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-min-32-chars

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/signalbridge
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/signalbridge

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Vault Encryption
VAULT_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Supabase (optional)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_JWT_SECRET=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Exchange API (for testing)
MEXC_API_KEY=
MEXC_API_SECRET=
BINANCE_API_KEY=
BINANCE_API_SECRET=
