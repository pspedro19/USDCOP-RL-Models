# =============================================================================
# USD/COP Forecasting Pipeline - Environment Variables
# =============================================================================
# Copiar este archivo a .env y configurar los valores
# NUNCA commitear el archivo .env al repositorio
#
# Las variables son leidas por backend/src/config/settings.py
# =============================================================================

# =============================================================================
# Application
# =============================================================================
APP_NAME="USD/COP Forecasting Pipeline"
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# PostgreSQL
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pipeline_db
DB_USER=pipeline
DB_PASSWORD=pipeline_secret_change_me
DB_SCHEMA=core

# Docker Compose compatibility
POSTGRES_USER=pipeline
POSTGRES_PASSWORD=pipeline_secret_change_me
POSTGRES_DB=pipeline_db

# =============================================================================
# MinIO (S3-compatible Object Storage)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minio_secret_change_me
MINIO_BUCKET=ml-models
MINIO_SECURE=false

# Docker Compose compatibility
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minio_secret_change_me

# Buckets
MINIO_BUCKET_MODELS=ml-models
MINIO_BUCKET_DATA=raw-data
MINIO_BUCKET_ARTIFACTS=mlflow-artifacts

# AWS S3 credentials (MinIO compatible)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minio_secret_change_me
AWS_REGION=us-east-1
S3_ENDPOINT_URL=http://minio:9000

# =============================================================================
# MLflow
# =============================================================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=usdcop-forecasting
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
# MLFLOW_ARTIFACT_LOCATION=s3://mlflow-artifacts

# =============================================================================
# Apache Airflow
# =============================================================================
AIRFLOW_UID=50000
AIRFLOW_HOME=/opt/airflow
AIRFLOW_DAGS_FOLDER=/opt/airflow/dags
AIRFLOW_WWW_USER=admin
AIRFLOW_WWW_PASSWORD=admin_change_me

# Fernet key (generar con: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
AIRFLOW__CORE__FERNET_KEY=

# =============================================================================
# API (FastAPI)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
CORS_ORIGINS=*

# JWT Authentication
JWT_SECRET_KEY=your_api_secret_key_change_me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Legacy compatibility
API_DEBUG=false
API_SECRET_KEY=your_api_secret_key_change_me

# =============================================================================
# Redis (Caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Frontend
# =============================================================================
VITE_API_URL=http://localhost:8000

# =============================================================================
# Data Sources API Keys
# =============================================================================
# FRED API (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_api_key

# TwelveData
TWELVEDATA_API_KEY=your_twelvedata_api_key

# =============================================================================
# Email / Notifications
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=alerts@yourcompany.com

# =============================================================================
# ML Pipeline Settings
# =============================================================================
ML_HORIZONS=1,5,10,15,20,25,30
ML_MODELS=ridge,bayesian_ridge,xgboost,lightgbm,catboost
ML_RANDOM_STATE=42
ML_TRAIN_SIZE=0.8
ML_N_FEATURES=15
OPTUNA_N_TRIALS=50

# =============================================================================
# Custom Paths (optional - defaults to project structure)
# =============================================================================
# DATA_PATH=/path/to/data
# OUTPUT_PATH=/path/to/outputs
# MODELS_PATH=/path/to/models

# =============================================================================
# Optional: External Services
# =============================================================================
# Sentry (error tracking)
# SENTRY_DSN=https://xxx@sentry.io/xxx
