# USDCOP Trading System Environment Configuration
# Copy this file to .env and customize the values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=usdcop_trading

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_PASSWORD=your_redis_password_here

# ==============================================
# MINIO CONFIGURATION
# ==============================================
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_minio_password_here

# ==============================================
# AIRFLOW CONFIGURATION
# ==============================================
AIRFLOW_USER=admin
AIRFLOW_PASSWORD=your_airflow_password_here
AIRFLOW_FERNET_KEY=your_fernet_key_here
AIRFLOW_SECRET_KEY=your_secret_key_here

# ==============================================
# GRAFANA CONFIGURATION
# ==============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# ==============================================
# TRADING CONFIGURATION
# ==============================================
# IMPORTANT: Replace with your own credentials before using
TWELVEDATA_API_KEY=your_twelvedata_api_key_here
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server

# ==============================================
# SECURITY & MONITORING
# ==============================================
JWT_SECRET=your_jwt_secret_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASSWORD=your_email_password

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
API_BASE_URL=http://localhost:3000/api
DASHBOARD_PORT=3000
GRAFANA_PORT=3001
AIRFLOW_PORT=8080