# ================================================
# USDCOP Trading System - Multi-Model Environment Configuration
# ================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env files with real credentials to version control
# ================================================

# ================================================
# Database Configuration
# ================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=usdcop
POSTGRES_USER=usdcop
POSTGRES_PASSWORD=changeme_secure_password_here

# ================================================
# Redis Configuration
# ================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password_here

# ================================================
# Model Configuration
# ================================================
# Path where trained models are stored (mounted as volume)
MODEL_STORAGE_PATH=/models

# Enable model registry for version tracking
MODEL_REGISTRY_ENABLED=true

# Active production model identifier
PRODUCTION_MODEL_ID=ppo_v19

# ================================================
# Feature Configuration
# ================================================
# Path to feature registry JSON (defines observation space)
FEATURE_CONFIG_PATH=/app/config/features/feature_registry_v19.json

# ================================================
# Redis Streams Configuration
# ================================================
# Enable Redis Streams for real-time signal publishing
REDIS_STREAMS_ENABLED=true

# Stream names for different signal types
REDIS_STREAM_SIGNALS=trading:signals
REDIS_STREAM_PREDICTIONS=trading:predictions
REDIS_STREAM_ACTIONS=trading:actions

# ================================================
# Inference Configuration
# ================================================
# Batch size for model inference
INFERENCE_BATCH_SIZE=32

# Timeout for inference requests (milliseconds)
INFERENCE_TIMEOUT_MS=1000

# Model cache TTL (seconds)
MODEL_CACHE_TTL=3600

# ================================================
# MinIO/S3 Configuration (for model artifacts)
# ================================================
MINIO_ACCESS_KEY=minio_access_key_here
MINIO_SECRET_KEY=minio_secret_key_here
MINIO_ENDPOINT=minio:9000

# ================================================
# MLflow Configuration
# ================================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000

# ================================================
# API Configuration
# ================================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,http://localhost:3001,http://localhost:3000

# API logging level
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=json

# ================================================
# Airflow Configuration (if using Airflow services)
# ================================================
AIRFLOW_FERNET_KEY=your_fernet_key_here
AIRFLOW_SECRET_KEY=your_secret_key_here
AIRFLOW_USER=admin
AIRFLOW_PASSWORD=changeme_airflow_password

# ================================================
# Monitoring Configuration
# ================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_grafana_password

# ================================================
# External API Keys (for data pipeline)
# ================================================
# TwelveData API Keys
TWELVEDATA_API_KEY_1=your_api_key_here

# FRED API Key (for macro data)
FRED_API_KEY=your_fred_api_key_here

# ================================================
# pgAdmin Configuration
# ================================================
PGADMIN_EMAIL=admin@usdcop.local
PGADMIN_PASSWORD=changeme_pgadmin_password
